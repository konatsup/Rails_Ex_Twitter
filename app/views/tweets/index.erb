<div>
  <%= form_tag("/tweets/create") do %>
    <textarea name="content"></textarea>
    <input type="submit" value="投稿する">
  <% end %>
  <ul>
    <% @tweets.each do |tweet| %>
      <li><%= tweet.content %>
        <%= link_to("編集", "/tweets/#{tweet.id}/edit") %>
        <%= link_to("削除", "/tweets/#{tweet.id}/destroy", {method: "post"}) %>
      </li>
    <% end %>
  </ul>
</div>